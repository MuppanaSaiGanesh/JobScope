<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
        <h1 class="text-2xl font-bold text-center mb-6">Admin Dashboard</h1>

        <!-- User List Table -->
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Username</th>
                        <th class="px-4 py-2 text-left">Email</th>
                        <th class="px-4 py-2 text-left">Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user) { %>
                        <% if (user.role !== 'admin') { %> <!-- Only show users, not admins -->
                        <tr class="border-b">
                            <td class="px-4 py-2"><%= user.id %></td>
                            <td class="px-4 py-2"><a href="/jobs/dashboard/<%= user.id %>" class="text-blue-600 hover:underline"><%= user.username %></a></td>
                            <td class="px-4 py-2"><%= user.email %></td>
                            <td class="px-4 py-2"><%= user.role %></td>
                        </tr>
                        <% } %>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>