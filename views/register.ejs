<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JobScope - Your Job Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <%- include('navbar', { user: user }) %>
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-center min-h-screen bg-gray-100">
            <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-sm">
                <h2 class="text-2xl font-bold text-center mb-6">Create an Account</h2>
                <form action="/auth/register" method="POST">
                    <input type="text" name="username" placeholder="Username" required
                        class="mb-4 p-2 border border-gray-300 rounded w-full" />
                    <input type="email" name="email" placeholder="Email" required
                        class="mb-4 p-2 border border-gray-300 rounded w-full" />
                    <input type="password" name="password" placeholder="Password" required
                        class="mb-4 p-2 border border-gray-300 rounded w-full" />
                    <input type="text" name="skills" placeholder="Technical Skills (comma-separated)" required
                        class="mb-4 p-2 border border-gray-300 rounded w-full" />
                    <input type="text" name="location" placeholder="Location" required
                        class="mb-4 p-2 border border-gray-300 rounded w-full" />
                    <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition duration-200">
                        Register
                    </button>
                </form>
                <p class="mt-4 text-center">Already have an account? <a href="/auth/login" class="text-blue-500">Login
                        here</a></p>
            </div>
        </div>
    </div>
</body>

</html>